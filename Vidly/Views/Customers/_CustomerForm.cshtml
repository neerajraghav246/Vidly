@model Vidly.ViewModels.CustomerViewModel

<div class="form-group">
    @Html.LabelFor(m => m.customer.Name)
    @Html.TextBoxFor(m => m.customer.Name, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.customer.Birthdate)
    @Html.TextBoxFor(m => m.customer.Birthdate, "{0:dd MMM yyyy}", new { @class = "form-control" })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.customer.MembershipTypeId)
    @Html.DropDownListFor(m => m.customer.MembershipTypeId, new SelectList(Model.membershipTypes, "Id", "Name"), "--Select--", new { @class = "form-control" })
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        @Html.CheckBoxFor(m => m.customer.IsSubscribedToNewsletter, new { @class = "form-check-input" }) @Html.DisplayNameFor(m => m.customer.IsSubscribedToNewsletter)
    </label>
</div>
