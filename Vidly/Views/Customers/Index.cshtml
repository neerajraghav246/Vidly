@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<h2 class="mt-4">Customers</h2>


@Html.ActionLink("Create New","Create",null,new { @class= "btn btn-info" })
@if (Model.Count()==0)
{
    <text> We don't have any customer</text>
}
else
{
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Membership Type
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @*@Html.DisplayFor(modelItem => item.Name)*@
            @Html.ActionLink(item.Name, "Edit", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssociatedMembershipType.Name)
        </td>
    </tr>
    }

</table>

}

