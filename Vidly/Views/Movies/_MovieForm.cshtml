@model Vidly.ViewModels.MovieViewModel

<div class="form-group">
    @Html.LabelFor(m=>m.movie.Name)
    @Html.TextBoxFor(m=>m.movie.Name,new { @class="form-control"})
</div>
<div class="form-group">
    @Html.LabelFor(m=>m.movie.ReleaseDate)
    @Html.TextBoxFor(m=>m.movie.ReleaseDate,"{0:dd MMM yyyy}",new { @class="form-control"})

</div>
<div class="form-group">
    @Html.LabelFor(m=>m.movie.GenereId)
    @Html.DropDownListFor(m=>m.movie.GenereId,new SelectList(Model.generes,"Id","Name"),"--Select Genere--",new { @class="form-control"})
</div>
<div class="form-group">
    @Html.LabelFor(m=>m.movie.NumberInStock)
    @Html.TextBoxFor(m=>m.movie.NumberInStock,new { @class="form-control",@type="number"})
</div>